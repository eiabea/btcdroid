<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        <item name="android:actionBarStyle">@style/CustomActionBar</item>
-->
        <!-- Support library compatibility
        <item name="actionBarStyle">@style/CustomActionBar</item>
        -->

        <!-- Set AppCompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/bd_actionbar_background</item>
        <item name="colorPrimaryDark">@color/bd_primary_dark</item>

        <item name="android:colorPrimary">@color/bd_actionbar_background</item>
        <item name="android:colorPrimaryDark">@color/bd_primary_dark</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/bd_actionbar_background</item>
        <item name="android:titleTextStyle">@style/style_actionbar_title</item>
        <item name="android:subtitleTextStyle">@style/style_actionbar_subtitle</item>

        <!-- Support library compatibility -->
        <item name="background">@color/bd_actionbar_background</item>
    </style>

    <!-- Actionbar -->
    <style name="style_actionbar_title">
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/bd_white</item>
    </style>

    <style name="style_actionbar_subtitle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/bd_white</item>
    </style>

    <!-- SmallCard -->
    <style name="style_small_card_headline">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bd_dark_text</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="style_small_card_value">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="style_small_card_value_multi">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="style_small_card_value_multi_big">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="style_small_card_desc">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bd_grey_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Card -->
    <style name="style_card_header_name">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bd_dark_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="style_card_header_status">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_card_holder">
        <item name="android:padding">3dp</item>
    </style>

    <style name="style_card_desc">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bd_grey_text</item>
    </style>

    <style name="style_card_value">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bd_dark_grey_text</item>
    </style>

    <style name="style_progress">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_small_green</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small_green</item>
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:max">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

</resources>